package example_scann_er;
//import the scanner class
import java.util.Scanner;

public class Example_Scann_er {


    public static void main(String[] args) {
        
        //variable string type to store characters
        String name;
        
//int type variable to store digits
        int age;
        
       
        // Scanner object "inputdevice" created
        Scanner inputDevice = new Scanner(System.in);
        //system. standard input device for name
        System.out.print("Please enter your name>>>");
       
        //sanner object uses nextline due to variable type
        name = inputDevice.nextLine();
        
        System.out.print("Please enter your age>>>");
        
        age = inputDevice.nextInt();
        
        
        
        System.out.println("Your name is " + name + " and you are " + age + " years old");
        
        
    }
    
}
